<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>
<AnchorPane prefHeight="580.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.ui.ApplicationController">
    <TextField fx:id="inputText" layoutX="33.0" layoutY="29.0" onAction="#lookUpWord"
        onKeyPressed="#changeFocusDown" onKeyTyped="#prepareSearchList" prefHeight="51.0"
        prefWidth="239.0" promptText="Tìm kiếm">
        <font>
            <Font size="14.0"/>
        </font>
    </TextField>
    <ListView fx:id="searchList" layoutX="32.0" layoutY="97.0" onKeyPressed="#selectWord"
        onMouseClicked="#selectWordDoubleClick"
        prefHeight="456.0" prefWidth="242.0"/>
    <WebView fx:id="webView" fontScale="1.2" layoutX="300.0" layoutY="97.0" prefHeight="456.0"
        prefWidth="490.0"/>
    <Button layoutX="300.0" layoutY="29.0" mnemonicParsing="false" onAction="#addingWord"
        prefHeight="51.0" prefWidth="102.0" text="Thêm từ">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button layoutX="429.3333" layoutY="29.0" mnemonicParsing="false" onAction="#showInformation"
        prefHeight="51.0" prefWidth="102.0" text="Thông tin">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button layoutX="558.6666" layoutY="29.0" mnemonicParsing="false" onAction="#showInstruction"
        prefHeight="51.0" prefWidth="102.0" text="Hướng dẫn">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button layoutX="688.0" layoutY="29.0" mnemonicParsing="false" onAction="#exportToFile"
        prefHeight="51.0" prefWidth="102.0" text="Xuất dữ liệu">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button layoutX="802.0" layoutY="97.0" mnemonicParsing="false" onAction="#playSound"
        prefHeight="34.0" prefWidth="83.0" text="Phát âm">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button layoutX="802.0" layoutY="145.0" mnemonicParsing="false" onAction="#editWordDefinition"
        prefHeight="34.0" prefWidth="83.0" text="Sửa từ">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button layoutX="802.0" layoutY="193.0" mnemonicParsing="false" onAction="#deleteWord"
        prefHeight="34.0" prefWidth="83.0" text="Xóa từ">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button layoutX="802.0" layoutY="518.0" mnemonicParsing="false"
        onAction="#changeToSentencesTranslatingApplication" prefHeight="34.0" prefWidth="83.0"
        text="Dịch câu">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
</AnchorPane>
