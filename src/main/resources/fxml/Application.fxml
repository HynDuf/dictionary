<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>
<AnchorPane id="anchorPane" prefHeight="580.0" prefWidth="948.0" xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.ui.controller.Application">
    <TextField fx:id="inputText" layoutX="31.0" layoutY="28.0" onAction="#lookUpWord"
        onKeyPressed="#changeFocusDown" onKeyTyped="#prepareSearchList" prefHeight="53.0"
        prefWidth="243.0" promptText="Search...">
        <font>
            <Font size="14.0"/>
        </font>
    </TextField>
    <ListView fx:id="searchList" layoutX="32.0" layoutY="97.0" onKeyPressed="#selectWord"
        onMouseClicked="#selectWordDoubleClick" prefHeight="456.0" prefWidth="242.0"/>
    <WebView fx:id="webView" fontScale="1.2" layoutX="300.0" layoutY="97.0" prefHeight="456.0"
        prefWidth="490.0"/>
    <Button fx:id="addWordButton" alignment="CENTER" layoutX="300.0" layoutY="29.0"
        mnemonicParsing="false" onAction="#addingWord" prefHeight="51.0" prefWidth="102.0"
        text=" Add" textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button fx:id="showInformationButton" alignment="CENTER" layoutX="429.3333" layoutY="29.0"
        mnemonicParsing="false" onAction="#showInformation" prefHeight="51.0" prefWidth="102.0"
        text=" Info" textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button fx:id="showInstructionButton" alignment="CENTER" layoutX="558.6666" layoutY="29.0"
        mnemonicParsing="false" onAction="#showInstruction" prefHeight="51.0" prefWidth="102.0"
        text=" Help" textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button fx:id="exportButton" alignment="CENTER" layoutX="688.0" layoutY="29.0"
        mnemonicParsing="false" onAction="#exportToFile" prefHeight="51.0" prefWidth="102.0"
        text=" Export" textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button fx:id="pronounceButton" alignment="CENTER" layoutX="802.0" layoutY="97.0"
        mnemonicParsing="false" onAction="#playSound" prefHeight="34.0" prefWidth="131.0"
        text=" Pronounce" textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button fx:id="editButton" alignment="CENTER" layoutX="802.0" layoutY="145.0"
        mnemonicParsing="false" onAction="#editWordDefinition" prefHeight="34.0" prefWidth="131.0"
        text=" Edit" textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button fx:id="deleteButton" alignment="CENTER" layoutX="802.0" layoutY="193.0"
        mnemonicParsing="false" onAction="#deleteWord" prefHeight="34.0" prefWidth="131.0"
        text=" Delete" textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button fx:id="googleButton" alignment="CENTER" layoutX="802.0" layoutY="500.0"
        mnemonicParsing="false" onAction="#changeToSentencesTranslating" prefHeight="53.0"
        prefWidth="131.0" text="  Google  Translate" textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button fx:id="modeToggle" contentDisplay="CENTER" graphicTextGap="0.0" layoutX="836.0"
        layoutY="28.0" mnemonicParsing="false" onAction="#toggleModeButton" prefHeight="52.0"
        prefWidth="63.0">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
</AnchorPane>
