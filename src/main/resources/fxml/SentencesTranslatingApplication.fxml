<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="580.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="dictionary.ui.SentencesTranslatingController">
    <children>
        <Button layoutX="802.0" layoutY="518.0" mnemonicParsing="false"
            onAction="#changeToApplication" prefHeight="34.0" prefWidth="83.0" text="Dịch từ">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
        <TextField fx:id="sinkText" alignment="TOP_LEFT" layoutX="57.0" layoutY="364.0"
            prefHeight="187.0" prefWidth="727.0" promptText="Dịch">
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>
        <TextField fx:id="sourceText" alignment="TOP_LEFT" layoutX="57.0" layoutY="48.0"
            prefHeight="187.0" prefWidth="727.0" promptText="Nhập vào đây">
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>
        <Button layoutX="57.0" layoutY="245.0" mnemonicParsing="false" onAction="#translateEnToVi"
            prefHeight="40.0" prefWidth="102.0" text="Nhấn để dịch">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
        <Button layoutX="798.0" layoutY="48.0" mnemonicParsing="false"
            onAction="#showSentencesInstruction" prefHeight="34.0" prefWidth="91.0"
            text="Hướng dẫn">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
        <Label layoutX="57.0" layoutY="14.0" prefHeight="34.0" prefWidth="102.0" text="Tiếng Anh">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Label layoutX="57.0" layoutY="329.0" prefHeight="34.0" prefWidth="102.0" text="Tiếng Việt">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Button layoutX="169.0" layoutY="245.0" mnemonicParsing="false" onAction="#textToSpeech"
            prefHeight="34.0" prefWidth="64.0">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="60.0" layoutX="65.0" layoutY="182.0"
                    pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icon/voice-icon.png"/>
                    </image>
                </ImageView>
            </graphic>
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
