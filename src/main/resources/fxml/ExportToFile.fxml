<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="122.0" prefWidth="440.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.ui.ExportToFileController">
    <TextField fx:id="fileName" layoutX="20.0" layoutY="20.0" prefHeight="30.0" prefWidth="240.0" promptText="Enter the exported file's name..." />
    <Button fx:id="browseButton" layoutX="20.0" layoutY="65.0" onAction="#chooseDir" prefHeight="30.0" prefWidth="70.0" text="Browse...">
        <font>
            <Font size="11.0" />
        </font>
    </Button>
    <Label fx:id="dirLabel" layoutX="100.0" layoutY="65.0" prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: #ded8d7;" />
    <Button layoutX="350.0" layoutY="65.0" onAction="#submitExport" prefHeight="30.0" prefWidth="70.0" text="Export">
        <font>
            <Font size="11.0" />
        </font>
    </Button>
</AnchorPane>
