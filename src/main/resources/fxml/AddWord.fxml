<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.HTMLEditor?>
<AnchorPane prefHeight="718.0" prefWidth="657.0" xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.ui.AddWordController">
    <TextField fx:id="inputText" layoutX="38.0" layoutY="160.0" prefHeight="44.0" prefWidth="581.0"
        promptText="Nhập từ cần thêm vào đây">
        <font>
            <Font size="14.0"/>
        </font>
    </TextField>
    <HTMLEditor fx:id="htmlEditor"
        htmlText="&lt;html&gt;&lt;head&gt;&lt;meta charset=&quot;UTF-8&quot;&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;"
        layoutX="38.0" layoutY="247.0" prefHeight="406.0" prefWidth="581.0"/>
    <Label layoutX="38.0" layoutY="125.0" prefHeight="34.0" prefWidth="102.0" text="Từ cần thêm">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <Label layoutX="38.0" layoutY="212.0" prefHeight="34.0" prefWidth="581.0"
        text="Nghĩa của từ                        (Chú ý: Sử dụng tiếng Việt không dấu)">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <Button layoutX="552.0" layoutY="667.0" mnemonicParsing="false" onAction="#saveWord"
        prefHeight="36.0" prefWidth="64.0" text="Lưu">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button layoutX="477.0" layoutY="666.0" mnemonicParsing="false" onAction="#quitWindow"
        prefHeight="36.0" prefWidth="64.0" text="Hủy">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button fx:id="browseButton" layoutX="36.0" layoutY="56.0" onAction="#chooseFile"
        prefHeight="33.0" prefWidth="80.0" text="Browse...">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Label fx:id="fileLabel" layoutX="123.0" layoutY="56.0" prefHeight="33.0" prefWidth="419.0"
        style="-fx-background-color: #ded8d7;">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <Button layoutX="549.0" layoutY="56.0" onAction="#submitImport" prefHeight="33.0"
        prefWidth="71.0" text="Nhập">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Label alignment="CENTER" layoutX="295.0" layoutY="102.0" prefHeight="31.0" prefWidth="64.0"
        text="Hoặc">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <Label layoutX="38.0" layoutY="22.0" prefHeight="33.0" prefWidth="581.0"
        text="Nhập từ file (mỗi dòng gồm một từ và nghĩa ngăn cách bởi kí tự TAB)">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
</AnchorPane>
