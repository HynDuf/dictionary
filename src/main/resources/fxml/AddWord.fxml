<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.HTMLEditor?>
<AnchorPane fx:id="anchorPane" prefHeight="707.0" prefWidth="657.0"
    xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="dictionary.ui.controller.AddWord">
    <TextField fx:id="inputText" layoutX="38.0" layoutY="142.0" prefHeight="44.0" prefWidth="581.0"
        promptText="Nhập từ cần thêm vào đây">
        <font>
            <Font size="14.0"/>
        </font>
    </TextField>
    <HTMLEditor fx:id="htmlEditor"
        htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;"
        layoutX="38.0" layoutY="229.0" prefHeight="406.0" prefWidth="581.0"/>
    <Label layoutX="38.0" layoutY="107.0" prefHeight="34.0" prefWidth="102.0" text="Từ cần thêm">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <Label layoutX="38.0" layoutY="194.0" prefHeight="34.0" prefWidth="581.0"
        text="Nghĩa của từ                        (Chú ý: Sử dụng tiếng Việt không dấu)">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <Button layoutX="556.0" layoutY="648.0" mnemonicParsing="false" onAction="#saveWord"
        prefHeight="36.0" prefWidth="64.0" text="Lưu">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button layoutX="477.0" layoutY="648.0" mnemonicParsing="false" onAction="#quitWindow"
        prefHeight="36.0" prefWidth="64.0" text="Hủy">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button fx:id="browseButton" layoutX="35.0" layoutY="48.0" onAction="#chooseFile"
        prefHeight="33.0" prefWidth="80.0" text="Browse...">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Label fx:id="fileLabel" layoutX="122.0" layoutY="48.0" prefHeight="33.0" prefWidth="419.0">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <Button layoutX="548.0" layoutY="48.0" onAction="#submitImport" prefHeight="33.0"
        prefWidth="71.0" text="Nhập">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Label alignment="CENTER" layoutX="296.0" layoutY="91.0" prefHeight="31.0" prefWidth="64.0"
        text="Hoặc">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <Label layoutX="35.0" layoutY="14.0" prefHeight="34.0" prefWidth="504.0"
        text="Nhập từ file (mỗi dòng gồm một từ và nghĩa ngăn cách bởi kí tự TAB)">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
</AnchorPane>
